<div class="container">
  <div class="profile">
    <div class="profile__back">
      <a href="/">
        <div class="profile__back-btn"></div>
      </a>
    </div>
    <div class="profile__content">
      <div class="profile__avatar">
        <div class="profile__img">
          <span class="profile__label">Поменять аватар</span>
        </div>
        <div class="profile__name">Иван</div>
      </div>
      <div class="profile__columns">
        {{> inputProfile type="email" name="email" label="Почта" value="pochta@yandex.ru"}}
        {{> inputProfile type="text" name="login" label="Логин" value="ivanivanov"}}
        {{> inputProfile type="text" name="first_name" label="Имя" value="Иван"}}
        {{> inputProfile type="text" name="second_name" label="Фамилия" value="Иванов"}}
        {{> inputProfile type="text" name="display_name" label="Имя в чате" value="Иван"}}
        {{> inputProfile type="tel" name="phone" label="Телефон" value="+7 (909) 967 30 30" style="input_lastChild"}}
      </div>
      <div class="profile__buttons">
        {{> buttonProfile label="Изменить данные" }}
        {{> buttonProfile label="Изменить пароль" }}
        {{> buttonProfile label="Выйти" style="btn-profile-danger input_lastChild"}}
      </div>
    </div>
    {{> modal name="Загрузите файл" fileText="Выбрать файл на компьютере" labelButton="Поменять" errorLabel="Нужно выбрать файл" inputType="file" inputName="avatar"}}
  </div>
</div>
